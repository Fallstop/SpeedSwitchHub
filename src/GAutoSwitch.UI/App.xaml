<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="GAutoSwitch.UI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:GAutoSwitch.UI"
    xmlns:converters="using:GAutoSwitch.UI.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:BoolToVisibilityInverseConverter x:Key="BoolToVisibilityInverseConverter"/>
            <!-- Card-based settings styles -->
            <Style x:Key="SettingsCardStyle" TargetType="Border">
                <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
                <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="16"/>
            </Style>

            <Style x:Key="SettingsSectionHeaderStyle" TargetType="TextBlock"
                   BasedOn="{StaticResource BodyStrongTextBlockStyle}">
                <Setter Property="Margin" Value="0,24,0,8"/>
            </Style>

            <Style x:Key="PageHeaderStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="28"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Margin" Value="0,0,0,8"/>
            </Style>

            <!-- Headset Status Card Style - More prominent than regular cards -->
            <Style x:Key="HeadsetStatusCardStyle" TargetType="Border">
                <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
                <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="20"/>
            </Style>

            <!-- Status Colors -->
            <Color x:Key="HeadsetOnlineColor">#0F7B0F</Color>
            <Color x:Key="HeadsetOfflineColor">#9D9D9D</Color>
            <Color x:Key="HeadsetDongleNotFoundColor">#C42B1C</Color>
            <Color x:Key="HeadsetUnknownColor">#9D5D00</Color>

            <SolidColorBrush x:Key="HeadsetOnlineBrush" Color="{StaticResource HeadsetOnlineColor}"/>
            <SolidColorBrush x:Key="HeadsetOfflineBrush" Color="{StaticResource HeadsetOfflineColor}"/>
            <SolidColorBrush x:Key="HeadsetDongleNotFoundBrush" Color="{StaticResource HeadsetDongleNotFoundColor}"/>
            <SolidColorBrush x:Key="HeadsetUnknownBrush" Color="{StaticResource HeadsetUnknownColor}"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
