<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="GAutoSwitch.UI.Views.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <ScrollViewer>
        <StackPanel
            Padding="56,24,56,24"
            MaxWidth="1000"
            HorizontalAlignment="Stretch">

            <!-- Page Header -->
            <TextBlock
                Text="About"
                Style="{StaticResource PageHeaderStyle}"/>
            <TextBlock
                Text="Application information and links"
                Style="{StaticResource CaptionTextBlockStyle}"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                Margin="0,0,0,24"/>

            <!-- App Info Card -->
            <Border Style="{StaticResource SettingsCardStyle}" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- App Icon -->
                    <Image
                        Grid.Column="0"
                        Source="/Assets/StoreLogo.png"
                        Width="64" Height="64"
                        Margin="0,0,16,0"
                        VerticalAlignment="Center"/>

                    <!-- App Details -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock
                            Text="G-AutoSwitch"
                            Style="{StaticResource SubtitleTextBlockStyle}"/>
                        <TextBlock
                            Text="Version 1.0.0"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Margin="0,4,0,0"/>
                        <TextBlock
                            Text="Automatic audio device switching for Logitech G Pro X 2"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Margin="0,8,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Links Section Header -->
            <TextBlock
                Text="Links"
                Style="{StaticResource SettingsSectionHeaderStyle}"/>

            <!-- GitHub Link Card -->
            <Border Style="{StaticResource SettingsCardStyle}" Margin="0,0,0,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Glyph="&#xE8A7;"
                        FontSize="20"
                        Margin="0,0,16,0"
                        VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="GitHub Repository"/>
                        <TextBlock
                            Text="View source code and contribute"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>

                    <HyperlinkButton
                        Grid.Column="2"
                        Content="Open"
                        NavigateUri="https://github.com"
                        VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Report Issue Card -->
            <Border Style="{StaticResource SettingsCardStyle}" Margin="0,0,0,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Glyph="&#xEBE8;"
                        FontSize="20"
                        Margin="0,0,16,0"
                        VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Report an Issue"/>
                        <TextBlock
                            Text="Found a bug? Let us know"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>

                    <HyperlinkButton
                        Grid.Column="2"
                        Content="Open"
                        NavigateUri="https://github.com/issues"
                        VerticalAlignment="Center"/>
                </Grid>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
